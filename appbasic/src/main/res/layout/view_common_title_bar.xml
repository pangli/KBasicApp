<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layoutTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@color/color_transparent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLeftIcon"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp18"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/svg_ic_icon_common_back_normal"
                android:layout_marginStart="@dimen/dp18"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp68"
                android:layout_marginRight="@dimen/dp68">


            <TextView
                    android:id="@+id/txtCenterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp16"
            />

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txtSubCenterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/sp12"
                />
            </LinearLayout>
        </LinearLayout>


        <TextView android:layout_marginRight="@dimen/dp18"
                  android:id="@+id/txtRightText"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:visibility="gone"
                  android:layout_centerVertical="true"
                  android:textColor="@color/color_ffffff"
                  android:layout_marginEnd="@dimen/dp18"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/imgRightIcon"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp18"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                app:srcCompat="@drawable/svg_ic_icon_common_more_white_normal"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp18"/>

    </RelativeLayout>

</LinearLayout>